<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_occasion"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/icons_circle"
        app:civ_border="false"
        android:layout_margin="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_occasion"
        android:textColor="@color/occasion_title"
        />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_occasion"
        android:background="@color/line"
        android:backgroundTint="@color/line"

        />


</RelativeLayout>