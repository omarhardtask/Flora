    <!--        android:layout_height="1dp"-->
    <!--        android:layout_marginTop="@dimen/_2sdp"-->
    <!--        android:layout_below="@+id/tv_city"-->
    <!--        android:background="@color/line"-->
    <!--        android:backgroundTint="@color/line"-->

    <!--        />-->


</LinearLayout>